<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvpegawai"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvidpeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000957"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvnamapeg"
            app:cardBackgroundColor="@color/black"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/idpeg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/idpegawai"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvnamapeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Pegawai"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@id/tvalamatpeg"
            app:layout_constraintTop_toBottomOf="@id/cvidpeg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tvalamatpeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/tvterdaftarpeg"
            app:layout_constraintTop_toBottomOf="@id/tvnamapeg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tvterdaftarpeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terdaftar"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/tvcabangpeg"
            app:layout_constraintTop_toBottomOf="@id/tvalamatpeg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tvcabangpeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cabang"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/tvnohppeg"
            app:layout_constraintTop_toBottomOf="@id/tvterdaftarpeg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tvnohppeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No HP"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/bthubungipeg"
            app:layout_constraintTop_toBottomOf="@id/tvcabangpeg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/bthubungipeg"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/bthubungi"
            android:textSize="16dp"
            android:backgroundTint="#000957"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvnohppeg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btlihatpeg"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btlihatpeg"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/btlihat"
            android:textSize="16dp"
            android:backgroundTint="#000957"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvnohppeg"
            app:layout_constraintStart_toEndOf="@id/bthubungipeg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>