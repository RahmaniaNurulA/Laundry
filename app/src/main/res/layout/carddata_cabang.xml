<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvdatacabang"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvidcabang"
            android:backgroundTint="#000957"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvnamacabangcv"
            app:cardBackgroundColor="@color/black"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvidcabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/idtambahan"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvnamacabangcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Cabang"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/cvidcabang"
            app:layout_constraintBottom_toTopOf="@id/tvkontakcabangcv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tvkontakcabangcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kontak"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvnamacabangcv"
            app:layout_constraintBottom_toTopOf="@id/tvalamatcabang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tvalamatcabangcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat Cabang"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvkontakcabangcv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>