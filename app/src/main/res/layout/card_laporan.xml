<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvlaporan"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvangka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[1]"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvnamapelanggan"
            app:layout_constraintBottom_toTopOf="@id/garis"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tvnamapelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nama"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvangka"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tvtanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tanggal"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvnamapelanggan"
            app:layout_constraintStart_toEndOf="@id/tvangka"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/garis"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tvketerangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status pembayaran"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvnamapelanggan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/garis"
            android:background="#FF8282"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="250dp"
            android:layout_marginEnd="10dp"/>
        <View
            android:id="@+id/garis"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/black"/>

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/laporan"
            app:layout_constraintTop_toBottomOf="@id/garis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/namalayanan"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/namalayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/garis"
            android:text="Cuci"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="250dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/gambar"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tambahanlayan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/namalayanan"
            android:text="tambahan"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="205dp"
            app:layout_constraintStart_toEndOf="@id/gambar"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:id="@+id/garis2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tambahanlayan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/garis2"
            android:text="Total bayar"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/bayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/total"
            android:text="harga"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Pembayaran"
            app:layout_constraintTop_toBottomOf="@id/garis2"
            app:layout_constraintStart_toEndOf="@id/total"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="130dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>